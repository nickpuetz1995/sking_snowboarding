<div class="card mb-3">
  <h2 class="card-header h4">
    Ski Area #<%= ski_area.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Name</dt>
      <dd><%= ski_area.name %></dd>

      <dt>Forecast</dt>
      <dd><%= ski_area.forecast %></dd>

      <dt>Snow last night</dt>
      <dd><%= ski_area.snow_last_night %></dd>

      <dt>Address</dt>
      <dd><%= ski_area.address %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back ski_area, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_ski_area_url(ski_area), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to ski_area, method: :delete, data: { confirm: "Do you really want to delete this ski_area?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(ski_area.updated_at) %> ago
  </div>
</div>
