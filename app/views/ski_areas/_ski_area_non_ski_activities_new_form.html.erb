<!-- Form non_ski_activity start -->
<%= form_with(model: @non_ski_activity, local: true) do |f| %>
<!-- Form non_ski_activity end -->

  <!-- Label and input for description start -->
  <div class="form-group">
    <%= f.label :description %>

    <!-- Input for description start -->
    <%= f.text_field :description, class: "form-control" %>
    <!-- Input for description end -->
  </div>
  <!-- Label and input for description end -->

  <!-- Label and input for tagged_ski_area_id start -->
  <!-- Input for tagged_ski_area_id start -->
  <%= f.hidden_field :tagged_ski_area_id, value: @ski_area.id %>
  <!-- Input for tagged_ski_area_id end -->
  <!-- Label and input for tagged_ski_area_id end -->

  <!-- Label and input for title start -->
  <div class="form-group">
    <%= f.label :title %>

    <!-- Input for title start -->
    <%= f.text_field :title, class: "form-control" %>
    <!-- Input for title end -->
  </div>
  <!-- Label and input for title end -->

  <!-- Label and input for address start -->
  <div class="form-group">
    <%= f.label :address %>

    <!-- Input for address start -->
    <%= f.text_field :address, class: "form-control" %>
    <!-- Input for address end -->
  </div>
  <!-- Label and input for address end -->

  <%= f.submit "Create non ski activity", class: "btn btn-block btn-outline-secondary" %>
<% end %>
