<% was_validated = ski_area.errors.any? %>

<%= form_with(model: ski_area, local: true, novalidate: true, class: "mb-3") do |f| %>
  <div class="form-group">
    <% name_class = "form-control" %>
    <% name_was_invalid = ski_area.errors.include?(:name) %>

    <% if was_validated %>
      <% if name_was_invalid %>
        <% name_class << " is-invalid" %>
      <% else %>
        <% name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :name %>
    <%= f.text_field :name, class: name_class, placeholder: "Enter name" %>
    <% if name_was_invalid %>
      <% ski_area.errors.full_messages_for(:name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% forecast_class = "form-control" %>
    <% forecast_was_invalid = ski_area.errors.include?(:forecast) %>

    <% if was_validated %>
      <% if forecast_was_invalid %>
        <% forecast_class << " is-invalid" %>
      <% else %>
        <% forecast_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :forecast %>
    <%= f.text_field :forecast, class: forecast_class, placeholder: "Enter forecast" %>
    <% if forecast_was_invalid %>
      <% ski_area.errors.full_messages_for(:forecast).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% snow_last_night_class = "form-control" %>
    <% snow_last_night_was_invalid = ski_area.errors.include?(:snow_last_night) %>

    <% if was_validated %>
      <% if snow_last_night_was_invalid %>
        <% snow_last_night_class << " is-invalid" %>
      <% else %>
        <% snow_last_night_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :snow_last_night %>
    <%= f.text_field :snow_last_night, class: snow_last_night_class, placeholder: "Enter snow last night" %>
    <% if snow_last_night_was_invalid %>
      <% ski_area.errors.full_messages_for(:snow_last_night).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="form-group">
    <% address_class = "form-control" %>
    <% address_was_invalid = ski_area.errors.include?(:address) %>

    <% if was_validated %>
      <% if address_was_invalid %>
        <% address_class << " is-invalid" %>
      <% else %>
        <% address_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :address %>
    <%= f.text_field :address, class: address_class, placeholder: "Enter address" %>
    <% if address_was_invalid %>
      <% ski_area.errors.full_messages_for(:address).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>
  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
