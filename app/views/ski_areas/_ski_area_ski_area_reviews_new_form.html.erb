<%= form_with(model: @ski_area_review, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :user_id %>

    <%= f.collection_select :user_id, User.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.hidden_field :ski_area_id, value: @ski_area.id %>

  <div class="form-group">
    <%= f.label :review %>

    <%= f.text_field :review, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :rating %>

    <%= f.text_field :rating, class: "form-control" %>
  </div>

  <%= f.submit "Create ski area review", class: "btn btn-block btn-outline-secondary" %>
<% end %>
