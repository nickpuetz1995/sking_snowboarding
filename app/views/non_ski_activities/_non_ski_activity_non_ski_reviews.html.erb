<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Non Ski Reviews

    <a data-toggle="collapse" href="#non_ski_activity_non_ski_reviews_new_form">
      Add non ski review
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @non_ski_activity.non_ski_reviews.each do |non_ski_review| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to non_ski_review, non_ski_review %>

        <%= link_to non_ski_review, method: :delete, data: { confirm: "Do you really want to delete this non_ski_review" } do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="non_ski_activity_non_ski_reviews_new_form">
        <%= render partial: "non_ski_activities/non_ski_activity_non_ski_reviews_new_form" %>
      </div>
    </div>

  </ul>
</div>
