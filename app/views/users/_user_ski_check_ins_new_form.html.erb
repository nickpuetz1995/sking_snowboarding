<!-- Form ski_check_in start -->
<%= form_with(model: @ski_check_in, local: true) do |f| %>
<!-- Form ski_check_in end -->

  <!-- Label and input for user_id start -->
  <!-- Input for user_id start -->
  <%= f.hidden_field :user_id, value: @user.id %>
  <!-- Input for user_id end -->
  <!-- Label and input for user_id end -->

  <!-- Label and input for ski_area_id start -->
  <div class="form-group">
    <%= f.label :ski_area_id %>

    <!-- Input for ski_area_id start -->
    <%= f.collection_select :ski_area_id, SkiArea.all, :id, :to_s, {}, class: "form-control" %>
    <!-- Input for ski_area_id end -->
  </div>
  <!-- Label and input for ski_area_id end -->

  <%= f.submit "Create ski check in", class: "btn btn-block btn-outline-secondary" %>
<% end %>
