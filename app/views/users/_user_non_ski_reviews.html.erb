<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Non Ski Reviews

    <a data-toggle="collapse" href="#user_non_ski_reviews_new_form">
      Add non ski review
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.non_ski_reviews.each do |non_ski_review| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to non_ski_review, non_ski_review %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_non_ski_reviews_new_form">
        <%= render partial: "users/user_non_ski_reviews_new_form" %>
      </div>
    </div>

  </ul>
</div>
