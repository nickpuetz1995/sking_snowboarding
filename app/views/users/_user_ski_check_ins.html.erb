<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Ski Check Ins

    <a data-toggle="collapse" href="#user_ski_check_ins_new_form">
      Add ski check in
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.ski_check_ins.each do |ski_check_in| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to ski_check_in, ski_check_in %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_ski_check_ins_new_form">
        <%= render partial: "users/user_ski_check_ins_new_form" %>
      </div>
    </div>

  </ul>
</div>
