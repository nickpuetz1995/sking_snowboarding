<%= form_with(model: @friend, local: true) do |f| %>

  <%= f.hidden_field :friend_sender_id, value: @user.id %>

  <div class="form-group">
    <%= f.label :friend_recipient_id %>

    <%= f.text_field :friend_recipient_id, class: "form-control" %>
  </div>

  <%= f.submit "Create friend", class: "btn btn-block btn-outline-secondary" %>
<% end %>
