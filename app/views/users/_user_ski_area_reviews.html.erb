<div class="card">
  <div class="card-header d-flex align-items-center justify-content-between">
    Ski Area Reviews

    <a data-toggle="collapse" href="#user_ski_area_reviews_new_form">
      Add ski area review
    </a>
  </div>

  <ul class="list-group list-group-flush">
    <% @user.ski_area_reviews.each do |ski_area_review| %>
      <li class="list-group-item d-flex align-items-center justify-content-between">
        <%= link_to ski_area_review, ski_area_review %>

      </li>
    <% end %>

    <div class="card-footer">
      <div class="collapse" id="user_ski_area_reviews_new_form">
        <%= render partial: "users/user_ski_area_reviews_new_form" %>
      </div>
    </div>

  </ul>
</div>
