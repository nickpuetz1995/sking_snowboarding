<%= form_with(model: @non_ski_review, local: true) do |f| %>

  <div class="form-group">
    <%= f.label :non_ski_activity_id %>

    <%= f.collection_select :non_ski_activity_id, NonSkiActivity.all, :id, :to_s, {}, class: "form-control" %>
  </div>

  <%= f.hidden_field :user_id, value: @user.id %>

  <div class="form-group">
    <%= f.label :review %>

    <%= f.text_field :review, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :rating %>

    <%= f.text_field :rating, class: "form-control" %>
  </div>

  <%= f.submit "Create non ski review", class: "btn btn-block btn-outline-secondary" %>
<% end %>
