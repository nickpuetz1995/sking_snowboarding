<div class="card mb-3">
  <h2 class="card-header h4">
    Friend #<%= friend.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>Friend sender</dt>
      <dd>
        <% if @friend.friend_sender.present? %>
          <%= link_to friend.friend_sender, friend.friend_sender %>
        <% end %>
      </dd>

      <dt>Friend recipient</dt>
      <dd>
        <% if @friend.friend_recipient.present? %>
          <%= link_to friend.friend_recipient, friend.friend_recipient %>
        <% end %>
      </dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back friend, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <% if current_user == @friend.friend_sender %>
          <%= link_to edit_friend_url(friend), class: "btn btn-block btn-sm btn-outline-secondary" do %>
            <i class="fas fa-edit"></i>
          <% end %>
        <% end %>
      </div>

      <div class="col">
        <% if current_user == @friend.friend_sender %>
          <%= link_to friend, method: :delete, data: { confirm: "Do you really want to delete this friend?" }, class: "btn btn-block btn-outline-secondary" do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(friend.updated_at) %> ago
  </div>
</div>
