<div class="card mb-3">
  <h2 class="card-header h4">
    Ski Area Review #<%= ski_area_review.id %>
  </h2>

  <div class="card-body">
    <dl class="mb-1">
      <dt>User</dt>
      <dd>
        <% if @ski_area_review.user.present? %>
          <%= link_to ski_area_review.user, ski_area_review.user %>
        <% end %>
      </dd>

      <dt>Ski area</dt>
      <dd>
        <% if @ski_area_review.ski_area.present? %>
          <%= link_to ski_area_review.ski_area, ski_area_review.ski_area %>
        <% end %>
      </dd>

      <dt>Review</dt>
      <dd><%= ski_area_review.review %></dd>

      <dt>Rating</dt>
      <dd><%= ski_area_review.rating %></dd>

    </dl>

    <div class="row">
      <div class="col">
        <%= link_to_show_or_back ski_area_review, '<i class="fas fa-search-plus"></i>'.html_safe, '<i class="fas fa-chevron-left"></i>'.html_safe, class: "btn btn-block btn-outline-secondary" %>
      </div>

      <div class="col">
        <%= link_to edit_ski_area_review_url(ski_area_review), class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-edit"></i>
        <% end %>
      </div>

      <div class="col">
        <%= link_to ski_area_review, method: :delete, data: { confirm: "Do you really want to delete this ski_area_review?" }, class: "btn btn-block btn-outline-secondary" do %>
          <i class="fas fa-trash-alt"></i>
        <% end %>
      </div>
    </div>
  </div>

  <div class="card-footer text-muted">
    Last updated <%= time_ago_in_words(ski_area_review.updated_at) %> ago
  </div>
</div>
